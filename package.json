{
  "name": "screenshot-using-playwright-action",
  "version": "0.0.1",
  "description": "Generate screenshots of urls using Playwright.",
  "author": "nirmalya.email@gmail.com",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc",
    "dev": "microbundle watch --no-compress --format cjs,es",
    "lint": "prettier --write 'src/**/*.{js,json,css,md,tsx,ts,yml}'"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "playwright": "^1.3.0",
    "@prisma/client": "^2.6.2"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "typescript": "^4.0.2",
    "@prisma/cli": "^2.6.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "microbundle": "^0.12.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts"
}
