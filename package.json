    "setup"
  ],
  "author": "Nirmalya Ghosh (nirmalya.email@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "dotenv": "^8.2.0",
    "faunadb": "^2.14.2",
    "form-data": "^3.0.0",
    "node-fetch": "^2.6.0",
    "playwright": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.0",
    "eslint-plugin-github": "^4.0.1",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "js-yaml": "^3.14.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  }
}
